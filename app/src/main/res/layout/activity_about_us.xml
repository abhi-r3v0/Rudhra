<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:text="Project Rudhra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prjctbtn"
        android:textColor="@color/orange"
        android:layout_marginBottom="80dp"
        android:layout_above="@+id/tvekathva"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="RUDHRA"
        android:textSize="60dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:id="@+id/tvus"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvekathva"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="\u00a9 EKATHVA"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/prjctbtn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.1"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/prjctbtn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
