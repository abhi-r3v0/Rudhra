<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_root_tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gracetex.revo.rudhra.RootTools">


    <Button
        android:text="Get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/adblockbtn"
        android:textColor="@color/orange"
        android:layout_below="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="14dp" />

    <TextView
        android:text="AdBlock Plus"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignBaseline="@+id/adblockbtn"
        android:layout_alignBottom="@+id/adblockbtn"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Greenify"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginTop="34dp"
        android:id="@+id/textView11" />

    <Button
        android:text="Get"
        android:textColor="@color/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greenifybtn"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/adblockbtn" />

    <TextView
        android:text="Tools"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Greenify lets you monitor all the background services. Malicious apps that generally run in the background are also vulnerable to Greenify."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView17"
        android:layout_below="@+id/greenifybtn"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Ads are one of the ways attackers can enter into your device. AdBlock Plus is an open source tool to block ads."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_below="@+id/adblockbtn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Call Blocker"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/textView18"
        android:layout_below="@+id/textView17"
        android:layout_alignStart="@+id/textView11" />

    <Button
        android:text="GET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blockerbtn"
        android:textColor="@color/orange"
        android:layout_alignBaseline="@+id/textView18"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignStart="@+id/greenifybtn" />

    <TextView
        android:text="SMS and MMS can be ways of delivering malicious content into the device. Call blocker helps you block unwated calls, SMS."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blockerbtn"
        android:layout_marginTop="17dp"
        android:id="@+id/textView19"
        android:layout_alignEnd="@+id/blockerbtn" />


</RelativeLayout>