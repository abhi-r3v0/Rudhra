<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gracetex.revo.rudhra.SettingsScanner">


    <RelativeLayout
        android:id="@+id/UnknownSources"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true">
    </RelativeLayout>

    <TextView
        android:text="Vulnerable Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:textColor="@color/white"
        android:id="@+id/tvvs"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/UnknownSources"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Unknown Sources"
        android:textSize="15dp"
        android:clickable="true"
        android:textColor="@color/white"
        android:id="@+id/USourcesView"
        android:layout_alignBaseline="@+id/USt"
        android:layout_alignBottom="@+id/USt"
        android:layout_toEndOf="@+id/UnknownSources" />

    <TextView
        android:text="Allowing apps from unauthorised sources may allow malicious programs into your device."
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/USt"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="ADB Enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:clickable="true"
        android:textColor="@color/white"
        android:id="@+id/ADBTView"
        android:layout_alignBaseline="@+id/ADBt"
        android:layout_alignBottom="@+id/ADBt"
        android:layout_toEndOf="@+id/UnknownSources" />

    <TextView
        android:text="USB debugging allows accessing many of the device functions from a PC. Recommended that it is disabled"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ADBt"
        android:layout_marginTop="15dp"
        android:id="@+id/textView8" />

    <TextView
        android:text="Developer Options"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DevTView"
        android:clickable="true"
        android:layout_alignBaseline="@+id/DevB"
        android:layout_alignBottom="@+id/DevB"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="@color/orange"
        android:clickable="true"
        android:id="@+id/ADBt"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:foregroundGravity="center"
        android:textColor="@color/orange"
        android:clickable="true"
        android:id="@+id/DevB"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Developer options are meant for advance purposes and many of the options may stop the device from working if wrongly used."
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DevB"
        android:layout_marginTop="12dp"
        android:id="@+id/textView12" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/USt"
        android:textSize="10dp"
        android:textColor="@color/orange"
        android:clickable="true"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/tvvs"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
